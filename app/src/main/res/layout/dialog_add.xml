<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="17dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right|center_vertical"
        android:orientation="horizontal">

        <CustomControl.CustomEditText
            android:id="@+id/edtTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:hint="@string/title"
            android:inputType="text"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorLightest"
            android:textSize="12sp" />

        <CustomControl.CustomTextViewBold
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:text="@string/title"
            android:textColor="@color/colorAccent"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right|center_vertical"
        android:orientation="horizontal">

        <CustomControl.CustomEditText
            android:id="@+id/edtfulltext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:hint="@string/fulltext"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorLightest"
            android:textSize="12sp" />

        <CustomControl.CustomTextViewBold
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:text="@string/fulltext"
            android:textColor="@color/colorAccent"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right|center_vertical"
        android:orientation="horizontal">

        <CustomControl.CustomEditText
            android:id="@+id/edthits"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:hint="@string/hits"
            android:inputType="text"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorLightest"
            android:textSize="12sp" />

        <CustomControl.CustomTextViewBold
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:text="@string/hits"
            android:textColor="@color/colorAccent"
            android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right|center_vertical"
        android:orientation="horizontal">

        <CustomControl.CustomEditText
            android:id="@+id/edtcatid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:hint="@string/catid"
            android:inputType="text"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorLightest"
            android:textSize="12sp" />

        <CustomControl.CustomTextViewBold
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:text="@string/catid"
            android:textColor="@color/colorAccent"
            android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right|center_vertical"
        android:orientation="horizontal">

        <CustomControl.CustomEditText
            android:id="@+id/edtcreated"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:hint="@string/created"
            android:inputType="text"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorLightest"
            android:textSize="12sp" />

        <CustomControl.CustomTextViewBold
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:text="@string/created"
            android:textColor="@color/colorAccent"
            android:textSize="16sp" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right|center_vertical"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/chkFav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            app:buttonTint="@color/colorAccent" />

        <CustomControl.CustomTextViewBold
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:text="@string/fav"
            android:textColor="@color/colorAccent"
            android:textSize="16sp" />
    </LinearLayout>

    <CustomControl.CustomButtonBold
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/save"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        app:backgroundTint="@color/colorLightest" />

</LinearLayout>