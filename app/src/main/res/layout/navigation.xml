<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_gravity="right"
    android:layout_height="match_parent">


    <android.support.design.widget.NavigationView
        android:layout_width="match_parent"
        android:id="@+id/navigation"
        android:layout_height="match_parent"
        android:layout_gravity="right">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/colorAccent" />

            <TextView
                android:id="@+id/btnregister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/linearLayout"
                android:layout_alignParentEnd="true"

                android:drawablePadding="10dp"
                android:drawableRight="@drawable/ic_lock"
                android:gravity="right"
                android:padding="15dp"
                android:text="ورود/ثبت نام"
                android:textColor="#ffffff"
                android:textSize="17dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/imageView"
                android:id="@+id/linearLayout">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="24dp"
                    android:padding="8dp"
                    android:text="بخش ها"
                    android:textColor="#700202"
                    android:textSize="24dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#dcdada" />

                <TextView
                    android:id="@+id/txtafgnews"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    android:padding="8dp"
                    android:text=" اخبار افغانستان و جهان"
                    android:textColor="#242121"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/txtmohajerin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    android:padding="6dp"
                    android:text=" اخبار مهاجرین"
                    android:textColor="#242121"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/txtvariousnews"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    android:padding="6dp"
                    android:text="اخبار گوناگون "
                    android:textColor="#242121"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/txtsport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    android:padding="6dp"
                    android:text="اخبارورزشی افغانستان"
                    android:textColor="#242121"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/txtscience"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"

                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    android:padding="6dp"
                    android:text="علم و فناوری"
                    android:textColor="#242121"
                    android:textSize="18dp" />
                <TextView
                    android:id="@+id/Film"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    android:padding="6dp"
                    android:text="کلیپ ها"
                    android:textColor="#242121"
                    android:textSize="18dp" />


                <TextView

                    android:id="@+id/Email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"

                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    android:padding="6dp"
                    android:text="تماس با ما"
                    android:textColor="#242121"
                    android:textSize="18dp" />
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:id="@+id/aboutus"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    android:padding="6dp"
                    android:text="درباره ما"
                    android:textColor="#242121"
                    android:textSize="18dp" />


            </LinearLayout>

        </RelativeLayout>

    </android.support.design.widget.NavigationView>
</LinearLayout>